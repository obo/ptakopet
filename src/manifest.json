{
    "manifest_version": 2,
    "name": "Ptakopet",
    "description": "A browser agnostic plugin for agile forward and backward translation",
    "version": "1",
    "author": "Vil√©m Zouhar",
    "web_accessible_resources": [
        "html/*",
        "js/*",
        "css/*",
        "src/*"
    ],

    "background": { 
        "scripts": ["js/ptakopet_bootstrap.js"]
    },
    "browser_action": {
        "default_icon": "src/logo_bird_mini_icon.png"
    },
    "icons": {
        "16": "src/logo_bird_mini_icon.png"
    },
    "permissions": ["activeTab", "contextMenus"]
}
